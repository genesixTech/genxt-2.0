NODE_ENV=production
PORT=3001
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000
SERVE_FRONTEND=false

# Banco (Postgres)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=genesix_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_DIALECT=postgres
USE_SQLITE=0
ALLOW_SQLITE_FALLBACK=0

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DISABLED=0

# Auth
JWT_SECRET=troque_esta_chave_segura
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
DEV_BYPASS_AUTH=0

# Logging
LOG_LEVEL=info

# Sync
FORCE_SYNC=0

# OAuth (preencher apenas se habilitar)
GOOGLE_CLIENT_ID=
